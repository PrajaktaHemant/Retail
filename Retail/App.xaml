             <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelLargeGray">
            <Setter Property="TextColor" Value="{StaticResource GrayColor}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontAttributes" Value="Bold"/>
             <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelLargeRed">
            <Setter Property="TextColor" Value="{StaticResource RedColor}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelMediumWhite">
            <Setter Property="TextColor" Value="{StaticResource WhiteColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontAttributes" Value="Bold"/>
             <Setter Property="Opacity" Value="100"/>
        </Style>

         <Style TargetType="Label" x:Key="LabelMediumBlack">
            <Setter Property="TextColor" Value="{StaticResource BlackColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontAttributes" Value="Bold"/>
             <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelMediumGreen">
            <Setter Property="TextColor" Value="{StaticResource GreenColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontAttributes" Value="Bold"/>
             <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelMediumRed">
            <Setter Property="TextColor" Value="{StaticResource RedColor}"/>
            <Setter Property="FontSize" Value="14"/>
