        </Style>

         <Style TargetType="Label" x:Key="LabelLeftSideMenu">
            <Setter Property="TextColor" Value="{StaticResource BlackColor}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
             <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Button" x:Key="ButtonPinkStyle">            
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource PinkColor}" Offset="0.1"/>
                        <GradientStop Color="{StaticResource PinkColor}" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
                 <Setter Property="FontFamily" Value="{StaticResource TextFont}"/>
                 <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
                 <Setter Property="FontSize" Value="20" />            
                 <Setter Property="TextTransform" Value="None"/>
        </Style>

        <Style TargetType="Button" x:Key="ButtonBlueStyle">
             
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource BlueColor}" Offset="0.1"/>
                        <GradientStop Color="{StaticResource BlueColor}" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
                <Setter Property="FontFamily" Value="{StaticResource TextFont}"/>
                <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
                <Setter Property="FontSize" Value="20" />            
                <Setter Property="TextTransform" Value="None"/>
        </Style>

        
    </Application.Resources>
</Application>