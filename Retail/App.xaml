             <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelMediumBlue">
            <Setter Property="TextColor" Value="{StaticResource BlueColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="segoemediacentersemibold.ttf"/>
            <Setter Property="FontAttributes" Value="Bold"/>
             <Setter Property="Opacity" Value="100"/>
        </Style>

         <Style TargetType="Label" x:Key="LabelMediumGray">
            <Setter Property="TextColor" Value="{StaticResource GrayColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>           
             <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Label" x:Key="Placeholder">
            <Setter Property="TextColor" Value="{StaticResource GrayColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>           
             <Setter Property="Opacity" Value="100"/>
        </Style>

        
        <Style TargetType="Label" x:Key="LabelSmallWhite">
            <Setter Property="TextColor" Value="{StaticResource WhiteColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Opacity" Value="100"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelSmallBlack">
            <Setter Property="TextColor" Value="{StaticResource BlackColor}"/>
